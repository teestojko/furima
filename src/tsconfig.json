{
    "compilerOptions": {
        "target": "ESNext",

        "module": "ESNext",

        "strict": true,

        "jsx": "react-jsx",

        "esModuleInterop": true,

        "moduleResolution": "node",

        "skipLibCheck": true,

        "forceConsistentCasingInFileNames": true,

        "baseUrl": "./resources/js",

        "paths": {
            "@/*": ["*"]
        }
    },

    "include": [
        "resources/js/**/*"
    ]
}

